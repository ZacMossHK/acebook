<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>

    {{!--                           nav bar                            --}}
    <div class="navbar-container">
      <a href="/"><div class="logo">
        <img src="/images/simple-slug.png" width="70" height="70" alt="slug-mascot-logo" />
      </div></a>
  {{#if user}}
     <div class="search-container">
        <a href="/profiles/{{user}}">
          <h1 class="title">
            Acebook
          <h1/>
        <a/>
        <form action="/profiles/" method="POST">
          <input id="search" name="searchBar" value="" class="search-bar" type="text" placeholder="Search for friends"/>
          <button type="submit" class="magnifying-glass"><img src="/images/magnifying-glass.png" width="24" height="24" alt="magnifying-glass"/></button>
        </form>
     </div>
  {{else}}
  <div class="search-container">
    <a href="/">
      <h1 class="title">
        Acebook
        <h1 />
        <a />
        <input class="search-bar" type="text" placeholder="Search for friends" />
        <button type="submit" class="magnifying-glass"><img src="/images/magnifying-glass.png" width="24" height="24"
            alt="magnifying-glass" /></button>
  </div>
  {{/if}}

      <div class="navbar-button-container">
        <div class="profile-button">
            <form  class="margin-remover" action="/profiles/:username" method="GET">
              <input class="profile-button-input" type="submit" value="Profile">
            </form>
        </div>

        <div class="logout-button">
          <form class="margin-remover" action="/sessions?_method=DELETE" method="POST">
            <input class="logout-button-input" type="submit" value="Log Out">
          </form>
        </div>
      </div>

    </div>
  {{!--                           end nav bar                            --}}
  
    {{{body}}}

  </body>
</html>